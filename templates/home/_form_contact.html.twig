{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-contact'}}) }}
    <div>
        {{ form_errors(form) }}
    </div>
    <div>
        {{ form_row(form.subject, {'label': 'Sujet'}) }}
    </div>
    <div>
        {{ form_row(form.name, {'label': 'Nom'}) }}
    </div>
    <div>
        {{ form_row(form.email, {'label': 'Email'}) }}
    </div>
    <div class="message">
        {{ form_row(form.message, {'label': 'Message'}) }}
    </div>

    <button class="btn">{{ button_label|default('Envoyer') }}</button>
{{ form_end(form) }}