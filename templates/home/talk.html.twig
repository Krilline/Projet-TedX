{% extends 'base.html.twig' %}
{% block title %}Talks{% endblock %}
{% block body %}
    <div class="talks_banner" xmlns="http://www.w3.org/1999/html">
        <h1 class="talks_title">Talks</h1>
        <img src="https://static.wixstatic.com/media/587b91_8d2e6339463d4a94aed82efa9b07402d~mv2.png/v1/fill/w_295,h_295,al_c,q_85,usm_0.66_1.00_0.01/587b91_8d2e6339463d4a94aed82efa9b07402d~mv2.webp">
    </div>

    <div class="bloc_page_content_talks">
        <div class="row">
            {% for talk in talks %}
            <div class="card_talks col-3">
                <a href="{{ talk.video }}"><img src="{{ talk.photo }}" alt="Avatar" style="width:100%"></a>
                <div class="container_talks">
                    <h4><b>{{ talk.title }}</b></h4>
                    {% for speaker in talk.speakers %}
                    <p>{{ speaker.name }}</p>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}