{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}

    {% for item in banner %}
        <div class="banner_ctn" xmlns="http://www.w3.org/1999/html" xmlns="http://www.w3.org/1999/html">
            <img id="banner" src="{{ item.photo }}" alt="{{ item.title }}">
            <div class="link-banner">
                <p class="bannerLink">Regarder les Talks 2020 ici :</p>
                <a href="{{ path('talks') }}">
                    <button class="bannerBtn bold">Talks 2020</button>
                </a>
            </div>
        </div>
    {% endfor %}

    <div class="valeurs-ctn">
        <h2 class="nosvaleurs">Nos Valeurs</h2>
        <div class="row">
            {% for item in articles %}
                {% if item.ispublished is same as(true) %}
                    <div class="card_article col-3">
                        {% if item.photo %}
                            <img class="card-img-top" id="pix_article" src="{{ item.photo }}" alt="{{ item.title }}">
                        {% endif %}
                        {% if item.video %}
                            <iframe class="card-img-top" src="{{ item.video }}" height="300" frameborder="0"
                                    allow="autoplay; fullscreen" allowfullscreen></iframe>
                        {% endif %}
                        <div class="card-body">
                            <h4 class="bold">{{ item.title }}</h4>
                            <p class="article">{{ item.content }}<br>
                                <span class="author red">{{ item.author }}</span></p>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>

    <div class="feedback">
        <div class="statistics">
            <div class="stat bold"> 100 <br>Participants</div>
            <div class="stat bold"> 7 <br>Speakers</div>
        </div>
        <h2 class="nosvaleurs red">AVIS</h2>
        {% for item in feedback %}
            {% if item.ispublished is same as(true) %}
                <p class="comment bold"><span class="red">"</span> {{ item.comment }} <span class="red">"</span></p>
                <p class="fb_name bold">{{ item.name }}, <span class="fb_job">{{ item.job }}</p><br>
            {% endif %}
        {% endfor %}

        <p class="post_comment red bold">Poster un avis</p>

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        <div>
            {{ form_errors(form) }}
        </div>
        <div>
            {{ form_row(form.name, {'label': 'Pr√©nom'}) }}
        </div>
        <div>
            {{ form_row(form.job, {'label': 'Job'}) }}
        </div>
        <div class="message">
            {{ form_row(form.comment, {'label': 'Commentaire'}) }}
        </div>

        <button class="btn">{{ button_label|default('Envoyer') }}</button>
        {{ form_end(form) }}
    </div>

    </div>

    <div class="ptn_ctn_hp">
        <h2 class="hp_partners">Nos Partenaires</h2>
        {% for partner in partners %}
            <img id="team_pix" src="{{ partner.logo }}" alt="{{ partner.name }}">
        {% endfor %}
    </div>

    <div class="edito_ctn">
        <h1 class="edito_title"> A propos de nous </h1>
        <img class="edito" src="https://i.postimg.cc/sx7SSPPL/screen.png" alt="edito">
    </div>

{% endblock %}
